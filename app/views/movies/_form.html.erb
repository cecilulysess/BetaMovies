<%= form_for(@movie) do |f| %>
  <% if @movie.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@movie.errors.count, "error") %> prohibited this movie from being saved:</h2>

      <ul>
      <% @movie.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :desc %><br />
    <%= f.text_area :desc %>
  </div>
  <div class="field">
    <%= f.label :image %><br />
    <%= f.text_area :image %>
  </div>
  <div class="field">
    <%= f.label :is_finished %><br />
    <%= f.check_box :is_finished %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
  <div>剧集：<br/>
    <% if @movie.episodes.size > 0 %>
      <% @movie.episodes.each do |an_episode| %>
        <span class="episodes"><%= link_to an_episode.title, 
          movie_episode_path(@movie, an_episode) %>
        </span>
      <% end %>
    <% else %>
      <span class="no_episode_available">暂无</span>
    <% end %>
  </div>
  
  <div>添加新剧集：<br/>
    <%= link_to "添加", new_movie_episode_path(@movie) %>
    </div>
  
<% end %>
